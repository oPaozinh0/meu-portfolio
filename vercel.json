{
    "version": 2,
    "framework": null,
    "builds": [
        {
            "src": "/public/index.php",
            "use": "vercel-php@0.7.3"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|fonts|storage|favicon.ico)(.*)",
            "dest": "/public/$1$2"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],
    "build": {
        "env": {
            "COMPOSER_INSTALL_FLAGS": "--no-dev --optimize-autoloader"
        }
    },
    "scripts": {
        "build": "composer vercel-build"
    }
}